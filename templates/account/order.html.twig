{% extends 'base.html.twig' %}




{% block title %}Mes commandes{% endblock %}

{% block body %}

 {% include "partials/_navbar.html.twig" %}


<h1 class="mt-3">Mes commandes</h1>


<hr>
{# {{ dump(app.user) }} #}

{% if orders|length ==0 %}
<p class="text-center">
Vous n' avez pas encore passé de commande sur notre site.
</p>
{% else %}

<table class="table mt-3">
  <thead>
    <tr>
      <th scope="col">Référence</th>
      <th scope="col">Passée le</th>
      <th scope="col">Produits</th>
      <th scope="col">Total</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
{% for order in orders %}
{# {{ dump(order) }}  #}
    <tr>
      <td>{{ order.reference }}</td>
      <td>{{ order.createdAt|date('d/m/Y') }}</td>
      <td>{{ order.orderDetails|length}}</td>
      <td>{{ ((order.carrierPrice + order.total)/100)|number_format(2,',','.')}} €</td>
      <td><a href={{ path('app_account_one_order',{ reference:orders[0].reference })}}>Voir ma commande</a></td>
    </tr>
{% endfor %}
  </tbody>
</table>


{% endif %}

{% include "partials/_footer.html.twig" %}

{% endblock %}