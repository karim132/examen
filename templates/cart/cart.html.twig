{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

{% include "partials/_navbar.html.twig" %}

<main class="container">
    <section class="row">
       <div>
           <h1 class="mt-3">Panier</h1>
           <table class="table">
           <thead>
           <tr>
           <th>Image</th>
           <th>Produit</th>
           <th>Prix</th>
           <th>Quantité</th>
           <th>Total</th>
           <th>Action</th>
           </tr>
           </thead>
           <tbody>
             {% for element in data %}
                <tr>
                <td> <img src="/uploads/{{ element.product.illustration }}"alt={{ element.product.name }} height="50px"></td>
                <td>{{ element.product.name }}</td>
                <td>{{ element.product.price /100}} €</td>
                {# <td>{{ element.product.illustration }}</td> #}
                <td>{{ element.quantity }}</td>
                <td>{{ element.quantity * element.product.price /100 }} €</td>
                <td>
                   <a href={{ path('cart_app_add',{ 'id': element.product.id})}} class="btn btn-success">+</a>
                   <a href={{ path('cart_app_remove',{ 'id': element.product.id})}} class="btn btn-warning">-</a>
                   <a href={{ path('cart_app_delete',{ 'id': element.product.id})}} class="btn btn-danger">Supprimer</a>
                </td>
                </tr>
                {% else %}
                <tr>
                <td colspan="5">Votre panier est vide</td>
                </tr>
             {% endfor %}
           </tbody>
           <tfoot>
           <tr>
              <td colspan="3">Total</td>
              <td>{{ total /100}} €</td>
              <td class="total-cart">
                 <a href={{ path('cart_app_empty')}} class="btn btn-danger ">Vider</a>
                 <a href="" class="btn btn-success">Valider mon panier</a>
              </td>
           </tr>
           </tfoot>
           </table>
       </div>
       {# <div class="text-right">
       </div> #}
    </section>
</main>


