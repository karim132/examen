{% extends 'base.html.twig' %}

{% block title %}Validation commande{% endblock %}

{% block body %}

{% include "partials/_navbar.html.twig" %}

<main class="one-product">

<h2 class="mt-3 ms-3">Choisir mon mode de livraison</h2>
<hr>
<div class="row">
<div class="col-md-6">
<div class="form-form">
{# passe le formulaire en format html pour les adresses et les transporteurs #}
{% set formHtml %}
{# Précise l'action ou doit se soumettre le formulaire avec le path #}
{{ form_start(form, {action:path('app_order_recap')}) }}
{{ form_end(form) }}
{% endset %}
{# remplace le br et raw pour interpreter le html #}
 {{ formHtml|replace({'[br]':'<br>'})|raw }}
</div> 
</div>

<div class="col-md-6">
<div class="form-check-2">
<div class="text-center mt-2">
<b>Récapitulatif de ma commande</b><br>
</div>
{% for element in cart %}
<div class="row">
<div class="col-2 mt-4"><img src="/uploads/{{ element.product.illustration }}"alt={{ element.product.name }} height="50px"></div>
<div class="col-8 my-auto mt-3">{{ element.product.name }}<br/>
<small>{{ element.product.subtitle }}</small><br/>
x {{ element.quantity }}
</div>
</div>
{% endfor %}
</div>
</div>
</div>
</main>
{% include "partials/_footer.html.twig" %}

{% endblock %}
